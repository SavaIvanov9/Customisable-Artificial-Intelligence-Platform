@using CAI.Services.Models.Bot
@model BotViewModel

<h2>Create new bot</h2>

@using (Ajax.BeginForm("Create", "Bot",
                            new AjaxOptions { LoadingElementId = "loader", OnSuccess = "onSuccess" }))
{

    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @type = "name" })
            @*@Html.ValidateFor(x => x.Name)*@
        </div>
        <br />
        <div class="col-md-10">
            <input type="submit" value="Create" />
        </div>
    </div>
}

<div id="loader" style="display:none">
    Loading...
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
